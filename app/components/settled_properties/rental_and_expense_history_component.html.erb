<div data-controller="toggle-switch" class="col-span-full border border-gray-200 p-4 rounded-2xl hidden md:block lg:col-span-6">
  <div class="text-sm flex justify-between">
    <div>
      <%== t(".income_expense_history", subheading: content_tag(:div, t(".history"), class: "text-lg font-semibold text-green-500")) %>
    </div>
    <div class="flex gap-x-2">
      <span><%= t(".rent") %></span>
      <%= render Ui::ToggleSwitchComponent.new %>
      <span><%= t(".expense") %></span>
    </div>
  </div>

  <div data-toggle-switch-target="toggleable">
    <%= render SettledProperties::RentalIncomeHistoryComponent.new(
      property_rents: settled_property.property_rents
    ) %>
  </div>

  <div data-toggle-switch-target="toggleable" class="hidden">
    <%= render SettledProperties::ExpenseHistoryComponent.new(
      property_expenses: settled_property.property_expenses
    ) %>
  </div>
</div>
