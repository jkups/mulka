<section class="max-w-screen-xl mx-auto my-10">
  <%= render SettledProperties::BasicDetailsComponent.new(
    property: @property
  ) %>

  <% if  @portfolio_settled_property.present? %>
    <div class="mt-10">
      <%= render SettledProperties::SummaryComponent.new(
        settled_property: @portfolio_settled_property.settled_property
      ) %>

      <div class="grid grid-cols-12 mt-4 space-x-4">
        <%= render SettledProperties::OwnershipShareComponent.new(
          portfolio_settled_property: @portfolio_settled_property,
          settled_property: @portfolio_settled_property.settled_property
        ) %>

        <%= render SettledProperties::RentalAndExpenseHistoryComponent.new(
          settled_property: @portfolio_settled_property.settled_property
        ) %>
      </div>

      <%= render SettledProperties::PropertyValueTrendComponent.new(
        settled_property: @portfolio_settled_property.settled_property
      ) %>
    </div>
  <% else %>
    <div class="border border-gray-200 my-10 p-10 rounded-2xl">
      <h3 class="text-xl font-bold mb-2 text-yellow-600"><%= t(".empty_state_heading") %></h3>
      <p><%= t(".empty_state_description_one") %></p>
      <p><%= t(".empty_state_description_two") %></p>
    </div>
  <% end %>
</section>
