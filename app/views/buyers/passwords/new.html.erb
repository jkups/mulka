<div class="grid grid-cols-2">
  <div class="bg-gray-100">
    <div class="text-4xl text-green-500 mt-5 ml-5">
      <i class="fas fa-blog"></i>
    </div>
  </div>
  <div class="flex flex-col justify-center items-center h-screen">
    <div class="w-1/2">
      <div class="mb-20">
        <h2 class="text-3xl font-bold mb-2"><%= t(".forgot_password_heading") %></h2>
        <p><%= t(".forgot_password_message") %></p>
      </div>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, t(".email") %><br />
          <%= f.email_field :email, autofocus: true, class: "form-input", required: true %>
        </div>

        <div class="mt-10 mb-2">
          <%= render Ui::PrimaryButtonComponent.new(title: t(".send_password"), full_width: true, rounded: true) %>
        </div>
      <% end %>

      <%= render "buyers/shared/links" %>
    </div>
  </div>
</div>
