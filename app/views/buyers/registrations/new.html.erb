<div class="grid grid-cols-2">
  <div class="bg-gray-100">
    <div class="text-4xl text-green-500 mt-5 ml-5">
      <i class="fas fa-blog"></i>
    </div>
  </div>
  <div class="flex flex-col justify-center items-center h-screen">
    <div class="w-1/2">
      <h2 class="text-3xl font-bold mb-20"><%= t(".signup_heading") %></h2>
      <%= form_for(resource, as: resource_name, builder: BuyerApp::FormBuilder, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mt-6">
          <%= f.label :full_name, t(".full_name") %>
          <%= f.text_field :full_name, autofocus: true %>
        </div>

        <div class="mt-6">
          <%= f.label :email, t(".email") %>
          <%= f.email_field :email %>
        </div>

        <div class="mt-6">
          <%= f.label :password, t(".password") %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password %>
        </div>

        <div class="mt-10 mb-2">
          <%= render Ui::PrimaryButtonComponent.new(title: t(".signup"), full_width: true, rounded: true) %>
        </div>
      <% end %>

      <%= render "buyers/shared/links" %>
    </div>
  </div>
</div>
