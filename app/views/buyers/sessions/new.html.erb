<div class="grid grid-cols-2">
  <div class="bg-gray-100">
    <div class="text-4xl text-green-500 mt-5 ml-5">
      <i class="fas fa-blog"></i>
    </div>
  </div>
  <div class="flex flex-col justify-center items-center h-screen">
    <div class="w-1/2">
      <h2 class="text-3xl font-bold mb-20"><%= t(".login_heading") %></h2>
      <%= form_for(resource, as: resource_name, builder: BuyerApp::FormBuilder, url: session_path(resource_name)) do |f| %>
        <div class="mt-6">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, value: "jane@example.com" %>
        </div>

        <div class="mt-6">
          <%= f.label :password %>
          <%= f.password_field :password, value: "password" %>
        </div>

        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <div class="italic text-right text-base text-gray-500 mt-1 hover:underline" >
            <%= link_to t(".forgot_password"), new_password_path(resource_name) %>
          </div>
        <% end %>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="mt-10 mb-2">
          <%= render Ui::PrimaryButtonComponent.new(title: t(".login"), full_width: true, rounded: true) %>
        </div>
      <% end %>

      <%= render "buyers/shared/links" %>
    </div>
  </div>
</div>

